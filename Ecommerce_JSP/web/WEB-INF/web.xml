        <url-pattern>/SignInChecking</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowCart</servlet-name>
        <url-pattern>/ShowCart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SubmitCart</servlet-name>
        <url-pattern>/SubmitCart</url-pattern>
