    <servlet-mapping>
        <servlet-name>ViewAllproductsForAdmin</servlet-name>
        <url-pattern>/ViewAllproductsForAdmin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Category</servlet-name>
        <url-pattern>/Category</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Product</servlet-name>
        <url-pattern>/Product</url-pattern>
